<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@+id/nav_user_list">

    <fragment
        android:id="@+id/nav_user_list"
        android:name="com.fun.gallerydroid.presentation.ui.user.UserListFragment"
        android:label="User list"
        tools:layout="@layout/fragment_item_list" >
        <action
            android:id="@+id/action_nav_user_list_to_nav_album_list"
            app:destination="@id/nav_album_list" />
    </fragment>

    <fragment
        android:id="@+id/nav_album_list"
        android:name="com.fun.gallerydroid.presentation.ui.album.UserAlbumFragment"
        android:label="Album list"
        tools:layout="@layout/fragment_item_list" />

</navigation>